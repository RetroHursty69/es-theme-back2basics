</view>

<feature supported="video">

<view name="video">
 <image name="character" extra="true">
	<path>./_assets/backdrops/${system.theme}.png</path>
	<tile>false</tile>
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
 </image>
 <image name="shade" extra="true">
	<path>./_assets/shade.png</path>
	<tile>false</tile>
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
 </image>
 <video name="md_video">
	<origin>0.5 0.5</origin>
	<pos>0.747 0.631</pos>
