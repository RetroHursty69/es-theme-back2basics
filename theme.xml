    <fontSize>0.018</fontSize>	
</text>
<text name="md_description">
    <pos>1.479 1.725</pos>
    <size>0.44 0.175</size>
    <color>0b2a49</color>
</text>
</view>

<view name="basic, detailed, grid">
 <image name="character" extra="true">
	<path>./_assets/backdrops/${system.theme}.png</path>
